    eol = lf
    editor = vim
    excludesfile = /Users/igaray/.gitignore_global
[user]
    name = IÃ±aki Garay
    email = igarai@gmail.com
[color]
    branch = auto
    diff = auto
    interactive = auto
    status = auto
[alias]
    st = status -uall
    br = branch
    ci = commit
    co = checkout
    lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
    l1 = log --color --oneline -5
    undo = reset --hard HEAD~1
[difftool "sourcetree"]
    cmd = opendiff \"$LOCAL\" \"$REMOTE\"
[push]
    default = matching
